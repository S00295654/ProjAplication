<Window x:Class="ProjAplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjAplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Background="#FF20315A">

        <TabControl>

            <!-- TAB 1 -->
            <TabItem Header="Home">
                <Grid Background="#FF20315A">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="382*"/>
                    </Grid.ColumnDefinitions>

                    <Rectangle Margin="14,79,44,0" Stroke="Black" Height="107" VerticalAlignment="Top" Grid.Column="1"/>
                    <Rectangle Height="101" Stroke="Black" VerticalAlignment="Top" Margin="14,228,44,0" Grid.Column="1"/>

                    <TextBox Margin="14,349,400,0"
                         TextWrapping="Wrap"
                         Text="TextBox"
                         VerticalAlignment="Top"
                         Height="112"
                         Background="#FF20315A" Grid.Column="1"/>

                    <Label Content="Current Games"
                       Margin="14,44,0,0"
                       FontSize="20"
                       Foreground="#FFD0D0D0"
                       VerticalAlignment="Top" Grid.Column="1"/>

                    <Label Content="Planning to play"
                       Margin="14,186,0,0"
                       FontSize="20"
                       Foreground="#FFCED0CA"
                       VerticalAlignment="Top" Grid.Column="1"/>

                    <Rectangle Stroke="Black"
                           Fill="#FF0A3D58"
                           Height="44"
                           VerticalAlignment="Top" Grid.ColumnSpan="2"/>

                    <Button Content="X"
                        FontSize="36"
                        Foreground="#FF902929"
                        BorderBrush="{x:Null}"
                        HorizontalAlignment="Right"
                        Width="59" Margin="0,-18,0,362" Grid.Column="1"/>

                </Grid>
            </TabItem>

            <!-- TAB 2 -->
            <TabItem Header="Profile">
                <TextBlock Text="Profile content here"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </TabItem>

            <!-- TAB 3 -->
            <TabItem Header="Games">
                <TextBlock Text="Games list here"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </TabItem>

        </TabControl>

    </Grid>

</Window>
