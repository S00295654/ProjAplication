<Window x:Class="WpfApp1.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Profile" Height="400" Width="300">
    <StackPanel Margin="20" VerticalAlignment="Top">

        <!-- Nom -->
        <TextBlock Text="Name:" FontWeight="Bold"/>
        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10"/>

        <!-- Description -->
        <TextBlock Text="Description:" FontWeight="Bold"/>
        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,5,0,10" AcceptsReturn="True" Height="100" TextWrapping="Wrap"/>

        <!-- Image -->
        <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
            <Image Source="{Binding ProfileImage}" Width="60" Height="60" Margin="0,0,10,0"/>
            <Button Content="Upload Image" Width="100" Click="UploadImage_Click"/>
        </StackPanel>

        <!-- Boutons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Confirm" Width="100" Margin="0,0,10,0" Click="ConfirmButton_Click"/>
            <Button Content="Cancel" Width="100" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
