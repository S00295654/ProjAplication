<Window x:Class="WpfApp1.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        Background="{DynamicResource MaterialDesign.Surface}"
        TextElement.Foreground="{DynamicResource MaterialDesign.Body}"
        TextElement.FontSize="14"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="MainWindow" Height="694" Width="800">
    <TabControl Background="White">
        <TabItem Header="" BorderBrush="#FF00BFA0" Background="White">
            <Grid Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="245*"/>
                    <ColumnDefinition Width="131*"/>
                    <ColumnDefinition Width="424*"/>
                </Grid.ColumnDefinitions>


                <!-- Dispplay name of tabs -->

                <TextBlock
                Text="Profile"
                Foreground="#FF7952C0"
                FontWeight="SemiBold"
                Panel.ZIndex="100"
                IsHitTestVisible="False"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="117,-32,0,0" Height="17" Width="44" FontSize="14"/>
                <TextBlock
                Text="Home"
                Foreground="Gray"
                FontWeight="SemiBold"
                Panel.ZIndex="100"
                IsHitTestVisible="False"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="5,-32,0,0" Grid.Column="2" Height="17" Width="45" FontSize="14"/>

                <TextBlock
                Text="Game List"
                Foreground="Gray"
                FontWeight="SemiBold"
                Panel.ZIndex="100"
                IsHitTestVisible="False"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="259,-32,0,0" Grid.Column="2" Height="17" Width="69" FontSize="14"/>

                <Rectangle Margin="44,25,0,0"
                   Stroke="Black"
                   Height="439"
                   VerticalAlignment="Top"/>

                <!-- Image of profil -->
                <Image x:Name="imagedeprofil"
                Source="{Binding User.ProfileImage}"
                Height="150"
                Width="150"
                VerticalAlignment="Top"
                Margin="68,101,27,0"/>

                <TextBox
                    x:Name="UserNameTextBox"
                    Text="{Binding User.Name}"
                    IsReadOnly="True"
                    FontSize="22" Margin="44,24,0,0"
                    TextAlignment="Center" Height="72" VerticalAlignment="Top"/>

                <!-- Decrition -->
                <TextBlock
                    Text="{Binding User.Description}"
                    TextWrapping="Wrap"
                    FontSize="16"
                    Margin="42,276,1,0"
                    TextAlignment="Center" Height="188" VerticalAlignment="Top"/>

                <Button Content="Edit Profile"
                        Width="120"
                        Height="30"
                        HorizontalAlignment="Center"
                        Margin="0,380,0,0"
                        Command="{Binding EditUserCommand}"/>
            </Grid>
        </TabItem>

        <!-- TAB 1 HOME -->
        <TabItem Header="" Background="#FF0027FF">
            <Grid Background="#FF20315A">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="753*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="184"/>
                    <!-- Label Current Games -->
                    <!-- ItemsControl -->
                    <RowDefinition Height="Auto" MinHeight="166"/>
                    <!-- Label Planning to Play -->
                    <RowDefinition/>
                    <!-- TextBox etc -->
                </Grid.RowDefinitions>

                <Rectangle Margin="14,34,44,0" Stroke="Black" Height="138" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1"/>
                <Rectangle Height="101" Stroke="Black" VerticalAlignment="Top" Margin="14,55,44,0" Grid.Column="1" Grid.Row="2                            "/>

                <TextBox Margin="14,6,400,0"
             TextWrapping="Wrap"
             Text="TextBox"
             VerticalAlignment="Top"
             Height="112"
             Background="#FF20315A" Grid.Column="1" Grid.Row="3"/>

                <Label Content="Current Games"
           Margin="14,2,0,0"
           FontSize="20"
           Foreground="#FFD0D0D0"
           VerticalAlignment="Top" Grid.Column="1" Height="32" Grid.Row="1"/>
                <!-- Affichage des jeux ajoutés par l'utilisateur -->
                <ItemsControl ItemsSource="{Binding User.Games}"
              Grid.Row="1"
              Grid.Column="1"
              Margin="10,25,10,161" Grid.RowSpan="2">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Width="120"
                    Height="150"
                    Margin="5"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding DataContext.OpenGameCommand,
                              RelativeSource={RelativeSource AncestorType=Window}}"
                    CommandParameter="{Binding}">

                                <StackPanel>

                                    <!-- Conteneur de l'image avec ClipToBounds -->
                                    <Grid Width="100" Height="100" ClipToBounds="True">
                                        <Image Source="{Binding Illustration}"
                               Stretch="UniformToFill"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                                    </Grid>

                                    <TextBlock Text="{Binding Name}"
                               FontSize="12"
                               TextAlignment="Center"
                               Margin="0,5,0,0"/>
                                </StackPanel>

                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Label Content="Planning to play"
                   FontSize="20" Foreground="#FFCED0CA"
                   VerticalAlignment="Top"
                   Grid.Column="1" Margin="14,10,-14,0" Height="32" Grid.Row="2"/>

                <TextBlock
                Text="Home"
                Foreground="#FF7952C0"
                FontWeight="SemiBold"
                Panel.ZIndex="100"
                IsHitTestVisible="False"
                HorizontalAlignment="Center"
                VerticalAlignment="Top" Margin="0,-32,0,0" Grid.Column="1" Height="15" Width="38" FontSize="14"/>

                <TextBlock
                Text="Game List"
                Foreground="Gray"
                FontWeight="SemiBold"
                Panel.ZIndex="100"
                IsHitTestVisible="False"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="605,-32,0,0" Grid.Column="1" Height="17" Width="66" FontSize="14"/>

                <TextBlock
                Text="Profile"
                Foreground="Gray"
                FontWeight="SemiBold"
                Panel.ZIndex="100"
                IsHitTestVisible="False"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="86,-32,0,0" Grid.Column="1" Height="17" Width="45" FontSize="14"/>

            </Grid>
        </TabItem>
        <!-- TAB GAME LIST -->
        <TabItem Header="" BorderBrush="#FF9E66F3">
            <Grid Background="#FF20315A">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- BARRE DE RECHERCHE -->
                <TextBox
            Margin="20"
            Width="300"
            materialDesign:HintAssist.Hint="Seek a game ?"
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

                <!-- LISTE DES JEUX -->
                <ListView
                    Grid.Row="1"
                    Margin="20"
                    ItemsSource="{Binding FilteredGames}"
                    SelectedItem="{Binding SelectedGame}"
                    Style="{StaticResource MaterialDesignListView}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">

                                <!-- Image du jeu -->
                                <Image Source="{Binding Illustration}"
                   Width="60"
                   Height="60"
                   Stretch="UniformToFill"
                   Margin="0,0,10,0"/>

                                <!-- Nom du jeu -->
                                <TextBlock Text="{Binding Name}"
                       VerticalAlignment="Center"
                       FontSize="18"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <TextBlock
                Text="Home"
                Foreground="Gray"
                FontWeight="SemiBold"
                Panel.ZIndex="100"
                IsHitTestVisible="False"
                HorizontalAlignment="Center"
                VerticalAlignment="Top" Margin="0,-32,0,0" Height="15" Width="38" FontSize="14"/>

                <TextBlock
                Text="Game List"
                Foreground="#FF7952C0"
                FontWeight="SemiBold"
                Panel.ZIndex="100"
                IsHitTestVisible="False"
                HorizontalAlignment="Right"
                VerticalAlignment="Top" Margin="0,-32,102,0" Height="17" Width="63" FontSize="14"/>

                <TextBlock
                Text="Profile"
                Foreground="Gray"
                FontWeight="SemiBold"
                Panel.ZIndex="100"
                IsHitTestVisible="False"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="117,-32,0,0" Height="17" Width="45" FontSize="14"/>
                <Button
                Content="Add Game"
                Width="120"
                Height="35"
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Command="{Binding AddGameCommand}"
                Style="{StaticResource MaterialDesignRaisedButton}" />
            </Grid>
        </TabItem>
    </TabControl>
</Window>