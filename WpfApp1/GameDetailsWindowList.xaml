<Window x:Class="WpfApp1.GameDetailsWindowList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Details" Height="445" Width="714">

    <StackPanel Margin="20">
        <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
        <Image Source="{Binding Illustration}" Width="150" Height="150" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Time (h):" Width="100"/>
            <TextBox Text="{Binding Time, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Score (0-10):" Width="100"/>
            <TextBox Text="{Binding Score, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="State:" Width="100"/>
            <ComboBox SelectedItem="{Binding State}" Width="120">
                <ComboBoxItem Content="Stop"/>
                <ComboBoxItem Content="Playing"/>
                <ComboBoxItem Content="Planned"/>
                <ComboBoxItem Content="Finished"/>
            </ComboBox>
        </StackPanel>

        <Button Content="Remove from list" Margin="0,20,0,0" 
                Command="{Binding RemoveCommand}" Width="150"/>
    </StackPanel>
</Window>
