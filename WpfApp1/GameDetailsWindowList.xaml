<Window x:Class="WpfApp1.GameDetailsWindowList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Details" Height="467" Width="714">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Bouton info en haut à droite -->
        <Button Content="ℹ"
                Width="55"
                Height="55"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                FontSize="16"
                FontWeight="Bold"
                Click="InfoButton_Click" Grid.RowSpan="2"/>

        <!-- Contenu principal -->
        <StackPanel Grid.Row="1">

            <TextBlock Text="{Binding Name}" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>

            <Image Source="{Binding Illustration}" 
                   Width="150" 
                   Height="150" 
                   Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Time (h):" Width="100"/>
                <TextBox Text="{Binding Time, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Score (0-10):" Width="100"/>
                <TextBox Text="{Binding Score, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="State:" Width="100"/>
                <ComboBox x:Name="StateComboBox"
                          Width="120"
                          SelectedItem="{Binding State, Mode=TwoWay}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="Confirm Changes"
                        Width="150"
                        Margin="0,0,10,0"
                        Click="ConfirmButton_Click"/>
                <Button Content="Remove from list"
                        Width="150"
                        Click="RemoveButton_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
